<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/pizza_hot?useLegacyDatetimeCode=false&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping class="pizza.hot.model.Product"/>
        <mapping class="pizza.hot.model.Pizza"/>
        <mapping class="pizza.hot.model.Drink"/>
        <mapping class="pizza.hot.utils.Order"/>
        <mapping class="pizza.hot.model.DailyReport"/>
        <mapping class="pizza.hot.model.User"/>
    </session-factory>
</hibernate-configuration>